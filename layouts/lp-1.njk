<div class="content-carousel mb4" id="content-carousel" data-carousel>
    <div class="content-carousel__container">
        {%- for item in carousel -%}
        <div class="carousel__item content-carousel__item gradient-container {{ 'active' if loop.index0 == 0}} item-{{loop.index}}">
            <div class="content-carousel__img">
                <img src="{{item.img}}" alt="{{item.headline | escape }}" class="lazy">
            </div>
            <div class="content-carousel__copy">
                <div class="content-carousel__headline">{{item.headline}}</div>
                <div>
                    {{item.copy}}
                    {% if item.button.url %}
                    <br><a href="{{item.button.url}}" class="btn">{{item.button.label}}</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {%- endfor -%}
    </div>
    <div class="dots">
        {%- for i in carousel -%}
        <span data-dot="{{loop.index0}}" class="dot {{ 'active' if loop.index0 == 0}}"></span>
        {%- endfor -%}
    </div>
</div>
{%- endif -%}
{% if events %}
