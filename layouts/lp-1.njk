{% if quotes.length > 1 %}
<div class="dots-container">
    <div></div>
    <div class="dots-col">
        <div class="dots">
            {%- for i in quotes -%}
            <span data-dot="{{loop.index0}}" class="dot {{ 'active' if loop.index0 == 0}}"></span>
            {%- endfor -%}
        </div>
    </div>
</div>
{% endif %}
</section>
{% endif %}
