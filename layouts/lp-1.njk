<section class="mb3 index-header relative">
    <div class="parallax lp-parallax height-auto">
        <div class="square-graphics"></div>
        <div class="square-graphics"></div>
        <div class="square-graphics"></div>
    </div>
</section>
<section class="mb3 index-header">
