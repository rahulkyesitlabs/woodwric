    {% set events = events | sortEvents  %}
    <h2 class="cards-heading">{{eventsHeadline}}</h2>
    <p class="text-center" style="max-width: 715px;margin:auto;">
        {{eventsIntro}}
    </p>
    <div class="cards-container">
        {% for event in events %}
        {% if loop.index <= 3 %}
            <div class="card" data-after-value="{{event.date}}">
                <div class="card-img-container">
                    <img src="{{event.img}}" alt="{{event.name}} image" class="card-img"/>
                </div>
                <div class="card-details">
                    <div class="card-label">{{event.dateDisplay }}</div>
                    <h3 class="card-title">{{event.name}}</h3>
                    <p class="card-description">{{event.description | md}}</p>
                    <div class="card-location">{{event.location}}</div>
                    <div class="card-links">
                        <a href="{{event.info}}" class="btn btn-outline">More Info</a>
                        <a href="{{event.rsvp}}" class="btn" target="_blank">RSVP</a>
                    </div>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="text-center">
        <a href="/events" class="primary-color">View All Events
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 6 12" width="6" heigth="12">
                <g fill="none" fill-rule="evenodd" stroke="#018783" stroke-linecap="square" stroke-linejoin="round" stroke-width="1.5">
                    <path d="M1.5 1.5l3 4M1.5 10.5l3-4"/>
                </g>
            </svg>
        </a>
    </div>
    </section>
{% endif %}
