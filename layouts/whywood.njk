					</div>
				{% endfor %}
			</div>
		</div>
    </section>
    <script>
        var triggers = document.querySelectorAll('[data-slide-trigger');
        triggers.forEach(function (el) {
            el.addEventListener('click', function (event) {
                console.log(el.dataset);

                var rb = document.querySelector(el.dataset.slideTrigger);
                rb.checked = true;
            })
        })

